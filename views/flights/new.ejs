<%- include('../partials/header') %>
    <h2>Enter a New Flight</h2>
    <form action="/flights" method="POST">
        <label>Airline:
          <select name="airline" required>
            <option value=""></option>
            <option value="American">American Airlines</option>
            <option value="Southwest">Southwest Airlines</option>
            <option value="United">United Airlines</option>
          </select>
        </label><br>
        <label>Airport:
          <select name="airport" required>
            <option value=""></option>
            <option value="AUS">Austin, TX - AUS</option>
            <option value="DFW">Dallas, TX - DFW</option>
            <option value="DEN">Denver, CO - DEN</option>
            <option value="LAX">Los Angeles, CA - LAX</option>
            <option value="SAN">San Diego, CA - SAN</option>
          </select>
        </label><br>
        <label>Flight Number:
          <input type="number" name="flightNo"
            min="10" max="9999" required>
        </label><br>
        <label>Departure Date:
          <input type="date" name="departDate" required>
          <br>
        <label>Departure Time:
          <input type="time" name="departTime" required>
        </label>
        <input type="submit" value="Add Flight">
      </form>  
<%- include('../partials/footer') %>

